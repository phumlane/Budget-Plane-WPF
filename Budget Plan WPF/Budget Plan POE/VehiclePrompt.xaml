<Window x:Class="Budget_Plan_POE.VehiclePrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Budget_Plan_POE"
        mc:Ignorable="d"
        Title="VehiclePrompt" Height="200" Width="800" Background="#FFBDA9A9">
    <Grid>
        <Label x:Name="label" Content="Budget Plan" HorizontalAlignment="Left" Margin="250,25,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.364,0.324" FontSize="20" FontWeight="Bold"/>
        <Label x:Name="label8" Content="Do you want to buy the car?" HorizontalAlignment="Left" Margin="200,62,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="btnBuy" Content="YES" FontWeight="bold" HorizontalAlignment="Left" Margin="280,100,0,0" VerticalAlignment="Top" Click="btnBuy_Click"/>
        <Button x:Name="btnRent" Content="NO" FontWeight="bold" HorizontalAlignment="Left" Margin="320,100,0,0" VerticalAlignment="Top" Click="btnRent_Click"/>
    </Grid>
</Window>
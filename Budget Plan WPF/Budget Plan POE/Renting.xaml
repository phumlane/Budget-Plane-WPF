<Window x:Class="Budget_Plan_POE.Renting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Budget_Plan_POE"
        mc:Ignorable="d"
        Title="Renting" Height="250" Width="700"  Background="#FFBDA9A9">
    <Grid>
        <Label x:Name="label" Content="Budget Plan" HorizontalAlignment="Left" Margin="250,25,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.364,0.324" FontSize="20" FontWeight="Bold"/>
        <Label x:Name="label1" Content="Emter Monthly rental Amount:" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtRent" HorizontalAlignment="Left" Height="20" Margin="200,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnNext" Content="Next" HorizontalAlignment="Left" Background="#FFB29074" Margin="10,130,0,0" Width="80" VerticalAlignment="Top" Click="button_Click"/>
        <Label x:Name="label2" Content="Renting the Property" FontSize="18" FontWeight="Bold"  HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
